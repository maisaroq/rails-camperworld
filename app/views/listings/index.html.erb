<header>
  <div class="container" justify-content-center>
    <h1>Available listings in <%= params[:search]["location"] %></h1>
  </div>
</header>

<main>

  <div class="container" >
    <%= simple_form_for :search, url: listings_path, method: "GET" do |f| %>
      <div class="search-form-control form-group">
        <%= f.input :location, input_html: {value: "" , class: "form-control string required", autocomplete: "off"  }, placeholder: "search for another location", type:"text", name:"search[query]", id:"search_query" %>
        <%= f.submit "search", class: "btn btn-flat" %>
      </div>
    <% end %>
    <br>


    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col col-sm-6 col-lg-4">
          <%= link_to listing_path(listing) do %>
            <div class="card-trip">
              <%= cl_image_tag listing.image.key %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= listing.name %> | <%= listing.location %></h2>
                  <p><%= listing.description %></p>
                </div>
                <h2 class="card-trip-pricing">â‚¬<%= listing.price %></h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</main>
