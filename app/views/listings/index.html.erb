<header>
  <div class="container" justify-content-center>
    <h1>Here are all the listings!</h1>
  </div>
</header>

<main>
  <div class="container" >
    <div class="row">
      <% @listings.each do |listing| %>
        <!-- <div class="col col-sm-6 col-lg-3"> -->
          <%= link_to listing_path(listing) do %>
            <div class="card-trip">
              <%= cl_image_tag listing.image.key %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= listing.name %></h2>
                  <p><%= listing.description %></p>
                </div>
                <h2 class="card-trip-pricing">â‚¬<%= listing.price %></h2>
              </div>
            </div>
          <% end %>
        <!-- </div> -->
      <% end %>
    </div>
    <%= link_to icon('fas', 'plus'), new_listing_path %>
  </div>
</main>
