<header>
  <div class="container" justify-content-center>
     <h1> All your listings <%= current_user.email %> : </h1>
  </div>
</header>

<main>
  <div class="container" >
    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-6">
          <%= link_to listing_path(listing) do %>
            <div class="card-trip">
              <% if listing.photo.attached? %>
                <%= cl_image_tag listing.photo.key %>
              <% else %>
                <%= image_tag(listing.listing_photo)%>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= listing.name %> | <%= listing.location %> | â‚¬<%= listing.price %></h2>
                  <p><%= listing.description %></p>
                </div>
                <div class="d-flex align-items-start">
                  <%= link_to icon('fas fa-edit', "Edit"), edit_listing_path(listing), class: "btn pt-0 pr-0 text-muted" %>
                  <%= link_to icon('fas fa-trash', 'Delete'), listing_path(listing), method: :delete, class: "btn pt-0 pr-0 text-muted" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</main>